<% content_for :subtitle do %>
  what's "Articl" in Spanish anyways?
<% end %>
<p id="notice"><%= notice %></p>

<ul>
	<li><%= link_to image_tag('arrow_left.png'), articles_path, title: "List all articles" %><%= link_to 'list all articles', articles_path %></li>
	<li><%= link_to image_tag('table_edit.png'), edit_article_path(@article), title: "Edit article" %><%= link_to 'edit', edit_article_path(@article) %></li>
	<li><%= link_to image_tag('bin.png'), @article, title: "Delete Article", confirm: 'Are you sure?', method: :delete %><%= link_to 'delete', @article, confirm: 'Are you sure?', method: :delete %></li>
	<li><%= link_to image_tag('email.png'), @article, title: "Email Article" %><%= link_to 'email', @article %></li>
</ul>

<h1 class="article_title"><%= @article.title %></h1>

<p>
  by <%= @article.author %>. <%= pluralize(@article.num_edits, 'edit') %> since <%= @article.created_at.strftime("%b. %d %Y") %>.
</p>

<% @article.get_paragraphs.each do |paragraph| %>
	<p class="body_paragraph"><%= paragraph %></p>
<% end %>