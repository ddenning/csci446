<h2>All the World's Articles</h2>
<%= link_to 'New Article', new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Author Name</th>
    <th>Body</th>
    <th>Creation Date</th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td class="title"><%= article.title %></td>
    <td class="author"><%= article.author %></td>
    <td class="body"><%= article.body %></td>
    <td class="time"><%= article.created_at.strftime("%A, %b. %d %Y") %></td>
    <td class = "list_actions">
      <%= link_to 'Show', article %><br />
      <%= link_to 'Edit', edit_article_path(article) %><br/>
      <%= link_to 'Destroy', article, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />