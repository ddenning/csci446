= form_for [:admin, @game] do |f|
  -if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :Amazing
    = radio_button("game", "rating", "Amazing")
    = f.label :Good
    = radio_button("game", "rating", "Good")
    = f.label :Meh
    = radio_button("game", "rating", "Meh")
    = f.label :Horrible
    = radio_button("game", "rating", "Horrible")
  .field
    = f.label :user_id
    = collection_select(:game, :user_id, User.all, :id, :full_name)
  .actions
    = f.submit 'Save'
