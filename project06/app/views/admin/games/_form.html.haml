= form_for [:admin, @game] do |f|
  -if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :rating
    = f.text_field :rating
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
