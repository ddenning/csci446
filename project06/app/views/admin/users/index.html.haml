%p#notice= notice
%p#error= flash[:error]

%h1 Listing users

%table
  %tr
    %th Name
    %th Username
    %th Last Login
    %th Number of Games
    %th
    %th

  - sort_users(@users).each do |user|
    %tr
      %td= link_to user.full_name, edit_admin_user_path(user)
      %td= user.username
      %td= time_ago_in_words(user.current_login_at)
      %td= user.games.count
      %td= link_to 'Show', [:admin, user]
      %td= link_to 'Destroy', [:admin, user], :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New User', new_admin_user_path
