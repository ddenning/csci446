%h1 Listing games

%table
  %tr
    %th Title
    %th Rating
    %th User
    %th
    %th

  - sort_games(@games).each do |game|
    %tr
      %td= link_to game.title, [:member, game]
      %td= game.rating
      %td= display_user(game.user)
      %td= link_to 'Show', [:member, game]
      -if permitted_to? :edit, [:member, game]
        %td= link_to 'Edit', edit_member_game_path(game)

%br

= link_to 'New Game', new_member_game_path
